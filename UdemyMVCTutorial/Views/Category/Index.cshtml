@model List<Category>

@{
    ViewBag.Title = "Category";
    Layout = "_Layout";
}

<div class="container">

    <div class="row py-4">
        <div class="col-6">
            <h1 class="text-primary text-black card-subtitle">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>

        <tbody>
        @foreach (var item in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
            </tr>
        }
        </tbody>

    </table>

</div>